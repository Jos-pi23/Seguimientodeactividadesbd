
#menu principal
print("Bienvenid@")
print("1. Crear proyectos")
print("2. Ver proyectos")
print("0. Cerrar sesion")
ingreOP1 = input("Ingrese una opción: ")
def verificarDigito(ingre):
  while not ingre.isdigit():
    ingre = input("Ingrese una opción: ")
  ingre = int(ingre)
  return ingre
ingreOP = verificarDigito(ingreOP1)
while ingreOP != 0:
  if ingreOP == 1:
    ingreUser = input("Ingrese su email: ")
    #llamar a una funcion
    break
  elif ingreOP == 2:
    newNombre = input("Ingrese su nombre: ")
    #llamar a una funcion
    break
  else:
    print("Opción no válida")
    ingreOP2 = input("Ingrese una opción:")
    ingreOP = verificarDigito(ingreOP2)
print("Sesion cerrada")
#menu de proyectos

print("1. Proyectos Creados")
print("2. Proyectos Asignados")
print("0. Volver")
ingreOP1 = input("Ingrese una opción: ")
def verificarDigito(ingre):
  while not ingre.isdigit():
    ingre = input("Ingrese una opción: ")
  ingre = int(ingre)
  return ingre
ingreOP = verificarDigito(ingreOP1)
while ingreOP != 0:
  if ingreOP == 1:
    ingreUser = input("Ingrese su email: ")
    #llamar a una funcion para mostrar los proyectos creados
    break
  elif ingreOP == 2:
    newNombre = input("Ingrese su nombre: ")
    #llamar a una funcion para ver los proyectos asignados
    break
  else:
    print("Opción no válida")
    ingreOP2 = input("Ingrese una opción:")
    ingreOP = verificarDigito(ingreOP2)
print("Sesion cerrada")
